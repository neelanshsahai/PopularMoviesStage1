<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="@dimen/grid_card_width"
     android:layout_height="@dimen/grid_card_height"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_margin="@dimen/border4"
     app:cardElevation="@dimen/grid_card_elevation">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/grid_item_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_height"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/grid_item_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:autoSizeTextType="uniform"/>
    </LinearLayout>

</android.support.v7.widget.CardView>